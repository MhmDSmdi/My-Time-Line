<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">
            <TextView
                android:id="@+id/txt_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Message"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_dialog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="21 Apr 2018"
                android:alpha="0.8"
                android:layout_marginTop="2dp"
                android:layout_gravity="left"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/txt_dialog_message_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Are you sure delete this message?"
                android:drawableLeft="@drawable/ic_note"
                android:drawablePadding="1dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:alpha="0.8"
                android:layout_marginTop="8dp"/>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center">

              <RatingBar
                  android:id="@+id/rating_dialog_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:tooltipText="sadad"
                  android:layout_alignParentLeft="true"
                  android:isIndicator="false"
                  android:theme="@style/RatingBar"
                  android:stepSize="0.2"
                  android:numStars="3"
                  android:rating="2"
                  style="?android:attr/ratingBarStyleIndicator"/>

              <TextView
                  android:id="@+id/txt_dialog_rate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="17sp"
                  android:text="Rate : 5"
                  android:layout_alignParentRight="true"
                  android:alpha="1"
                  android:layout_gravity="center_vertical"
                  android:layout_marginTop="2dp"
                  android:textColor="@color/colorPrimaryDark"/>

          </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/btn_dialog_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_gravity="center"
                    android:text="@string/btn_dialog_save"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>