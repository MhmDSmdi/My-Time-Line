<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_card_messages_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="Date"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/txt_card_messages_voice_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_card_messages_voice_time"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:text="This message is body for text"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_card_messages_voice_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_alignBaseline="@id/txt_card_messages_voice_body"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:text="2:10"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btn_card_messages_voice_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/txt_card_messages_voice_body"
            android:text="play"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>