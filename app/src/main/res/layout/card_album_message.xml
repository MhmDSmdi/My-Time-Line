<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:maxWidth="@dimen/size_card_max_width"
    android:layout_marginLeft="@dimen/margin_message_placeholder">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_card_album_message_bullet"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="4dp"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/size_card_max_width"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/size_card_max_width"
        android:layout_marginHorizontal="@dimen/margin_avatar_message"
        android:layout_marginVertical="@dimen/margin_messages"
        app:cardCornerRadius="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_album_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_gravity="right"
            android:background="@color/white"/>
    </android.support.v7.widget.CardView>
</LinearLayout>