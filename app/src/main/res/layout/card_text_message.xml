<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/margin_message_placeholder">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_card_text_message_bullet"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="4dp"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/size_card_max_width"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="@dimen/margin_avatar_message"
        android:layout_marginVertical="@dimen/margin_messages"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_card_messages_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:text="Date"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/txt_card_messages_text_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_card_messages_text_time"
                android:maxWidth="@dimen/size_card_max_width"
                android:textSize="16sp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="This message contain some words in this View"
                android:textColor="#000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
