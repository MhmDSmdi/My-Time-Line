<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_image_message"
    android:maxWidth="@dimen/size_card_max_width"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="@dimen/margin_message_placeholder">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_card_image_message_bullet"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="4dp"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/width_image_message"
        android:layout_height="@dimen/height_image_message"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="@dimen/margin_avatar_message"
        android:layout_marginVertical="@dimen/margin_messages"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/img_image_message_card_drawable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
</LinearLayout>
